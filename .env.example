# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file - it's already in .gitignore

# Server Configuration
PORT=3001
NODE_ENV=production

# Database (optional - app works without it)
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/mybookmyvibe

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Google Books API
GOOGLE_BOOKS_API_KEY=your-google-books-api-key-here

# Spotify API
SPOTIFY_CLIENT_ID=your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here

# OpenAI API (for AI book analysis)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API (backup for AI analysis)
GEMINI_API_KEY=your-gemini-api-key-here

# Amazon Associates
AMAZON_ASSOCIATE_TAG=mybookmyvibe-20
